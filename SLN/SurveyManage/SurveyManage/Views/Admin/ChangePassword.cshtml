
<div class="addCompany">
    <table>
        <tbody>
            <tr>
                <td>
                    旧密码
                </td>
                <td><input type="password" class="comInput" id='@ViewData["id1"]' /></td>
            </tr>
            <tr>
                <td>
                    新密码
                </td>
                <td><input type="password" class="comInput" id='@ViewData["id2"]' /> </td>
            </tr>
            <tr>
                <td>
                    确认密码
                </td>
                <td><input type="password" class="comInput" id='@ViewData["id3"]' /> </td>
            </tr>
            <tr>
                <td colspan="2"><button type="button" id="Csubmit" class="sure">确定</button></td>
            </tr>
        </tbody>

    </table>
</div>
<script>
    var p1 = "#" + '@ViewData["id1"]';
    var p2 = "#" + '@ViewData["id2"]';
    var p3 = "#" + '@ViewData["id3"]';
    $(p1).blur(function () {

        $(p1).validatebox({
            required: true,
            validType: "Companyid"
        });

    });
    $(p2).blur(function () {

        $(p2).validatebox({
            required: true,
            validType: "Companyid"
        });

    });
    var eq = 'equals[' + p2 + ']';
    $(p3).blur(function () {

        $(p3).validatebox({
            required: true,
            validType:"equals['@ViewData["id2"]']",
        });

    });
    $("#Csubmit").click(function () {
        $(p1).validatebox({
            required: true,
            validType: "Companyid"

        });
        $(p2).validatebox({
            required: true,
            validType: "Companyid"

        });
        $(p3).validatebox({
            required: true,
            validType:"equals['@ViewData["id2"]']",
        });
        var ok = $(p1).validatebox("isValid") && $(p2).validatebox("isValid") && $(p3).validatebox("isValid");
        if(ok){
            $.ajax({
                url: "/admin/ChangePasswordPostBack",
                type: "post",
                data: {
                    oldPassword: $(p1).val(),
                    newPassword:$(p2).val(),
                    rePassword:$(p3).val()
                },
                success: function (data)
                {
                    data = eval("(" + data + ")");
                    var datas = new Array(data.count);
                    for (var x in data.data)
                    {
                        datas[x] = data.data[x].datakey;
                    }
                    $.messager.alert("提示", datas[1], "info");
                }
            })

        }

    });

</script>